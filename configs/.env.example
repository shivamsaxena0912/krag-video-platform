# KRAG Video Platform - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Application
# =============================================================================
APP_NAME=krag-video-platform
APP_ENV=development  # development, staging, production
DEBUG=true
LOG_LEVEL=INFO

# =============================================================================
# API Server
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000

# =============================================================================
# Database (PostgreSQL)
# =============================================================================
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/krag

# =============================================================================
# Neo4j (Knowledge Graph)
# =============================================================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password
NEO4J_DATABASE=krag_video

# =============================================================================
# Qdrant (Vector Store)
# =============================================================================
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# =============================================================================
# Redis (Cache & Queue)
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# Object Storage (S3/MinIO)
# =============================================================================
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minio
S3_SECRET_KEY=minio123
S3_BUCKET=krag-video
S3_REGION=us-east-1

# =============================================================================
# LLM Providers
# =============================================================================
OPENAI_API_KEY=sk-your-openai-key
ANTHROPIC_API_KEY=sk-your-anthropic-key

# =============================================================================
# Image Generation
# =============================================================================
REPLICATE_API_TOKEN=r8_your-replicate-token

# =============================================================================
# Voice Synthesis
# =============================================================================
ELEVENLABS_API_KEY=your-elevenlabs-key

# =============================================================================
# Default Models
# =============================================================================
DEFAULT_LLM_MODEL=gpt-4-turbo
DEFAULT_EMBEDDING_MODEL=text-embedding-3-large
DEFAULT_IMAGE_MODEL=sdxl
DEFAULT_VOICE_ID=21m00Tcm4TlvDq8ikWAM

# =============================================================================
# Pipeline Defaults
# =============================================================================
DEFAULT_MAX_COST=50.0
DEFAULT_MAX_ITERATIONS=3
DEFAULT_QUALITY_THRESHOLD=7.0

# =============================================================================
# Timeouts
# =============================================================================
LLM_TIMEOUT_SECONDS=60
GENERATION_TIMEOUT_SECONDS=300
